<?xml version="1.0" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<!-- FormBeans ============================= -->
	<form-beans>
	<form-bean name="angebotForm" type="de.kipf.shop.angebotsverwaltung.ui.AngebotForm"/>
	<form-bean name="suchForm" type="de.kipf.shop.angebotsverwaltung.ui.SuchForm"/>
	<form-bean name="angebotDetailForm" type="de.kipf.shop.angebotsverwaltung.ui.AngebotDetailForm"/>
	</form-beans>

	<!-- ActionMappings ======================== -->
	<action-mappings>
		<action path="/Angebote"
			    type="de.kipf.shop.angebotsverwaltung.ui.AngebotsverwaltungServlet"
			    name="angebotForm"
			    scope="request"
				validate="false"
				parameter="showAngebote">
			<forward name="angebote" path="/angebotsverwaltung/angebote.jsp"/>
		</action>

		<action path="/AngebotDetail"
			    type="de.kipf.shop.angebotsverwaltung.ui.AngebotsverwaltungServlet"
			    name="angebotDetailForm"
			    scope="request"
				validate="false"
				parameter="showAngebotDetail">
			<forward name="angebotDetail" path="/angebotsverwaltung/angebotDetail.jsp"/>
		</action>	

		<action path="/ShowSuche"
			    type="de.kipf.shop.angebotsverwaltung.ui.AngebotsverwaltungServlet"
			    name="suchForm"
			    scope="session"
				validate="false"
				parameter="showSuche">
			<forward name="suche" path="/angebotsverwaltung/suche.jsp"/>
		</action>	

		<action path="/Suche"
			    type="de.kipf.shop.angebotsverwaltung.ui.AngebotsverwaltungServlet"
			    name="suchForm"
			    scope="session"
				validate="true"
				input="/angebotsverwaltung/suche.jsp"
				parameter="suche">
			<forward name="ergebnis" path="/angebotsverwaltung/ergebnis.jsp"/>
			<forward name="suche" path="/angebotsverwaltung/suche.jsp"/>
		</action>	

	</action-mappings>
</struts-config>