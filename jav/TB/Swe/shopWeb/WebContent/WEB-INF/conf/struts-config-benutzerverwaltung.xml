<?xml version="1.0" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<!-- FormBeans ============================= -->
	<form-beans>
		<!-- FormBean f端r /FindBenutzer -->
		<form-bean name="findBenutzerForm" type="de.kipf.shop.personen.ui.FindBenutzerForm"/>

		<!-- FormBean f端r /DeleteBenutzer -->
		<form-bean name="deleteBenutzerForm" type="de.kipf.shop.personen.ui.DeleteBenutzerForm"/>

		<!-- FormBean f端r /CreateBenutzer -->
		<form-bean name="createBenutzerForm" type="de.kipf.shop.personen.ui.CreateBenutzerForm"/>
		
		<!-- FormBean f端r /CreateBenutzer -->
		<form-bean name="updateBenutzerForm" type="de.kipf.shop.personen.ui.UpdateBenutzerForm"/>
	</form-beans>

	<!-- ActionMappings ======================== -->
	<action-mappings>
			<action path="/CreateBenutzerForm"
			    forward="/benutzerverwaltung/create.jsp"/>

		<!-- Mappings mit BenutzerverwaltungAction -->
		<action path="/FindBenutzer"
			    type="de.kipf.shop.personen.ui.BenutzerverwaltungAction"
			    name="findBenutzerForm"
			    scope="session"
			    validate="false"
				cancellable="true"
			    parameter="find">
			<forward name="liste" path="/benutzerverwaltung/liste.jsp"/>
			<forward name="update" path="/benutzerverwaltung/update.jsp"/>
			<forward name="cancel" path="/index.jsp"/>
		</action>
		
		<action path="/BenutzerProfile"
			    type="de.kipf.shop.personen.ui.BenutzerverwaltungAction"
			    name="findBenutzerForm"
			    scope="session"
			    validate="false"
				cancellable="true"
			    parameter="findOwnProfile">
			<forward name="update" path="/benutzerverwaltung/update.jsp"/>
			<forward name="cancel" path="/index.jsp"/>
		</action>

	 	<action path="/UpdateBenutzer"
			    type="de.kipf.shop.personen.ui.BenutzerverwaltungAction"
			    name="updateBenutzerForm"
			    scope="session"
			    validate="true"
				input="/benutzerverwaltung/update.jsp"
			    cancellable="true"
			    parameter="update">
		    <exception key="errors.benutzer.update"
				type="de.kipf.shop.personen.ui.UpdateBenutzerException"
				path="/admin/errorpage.jsp"/>
		</action>

		<action path="/DeleteBenutzer"
			    type="de.kipf.shop.personen.ui.BenutzerverwaltungAction"
			    name="deleteBenutzerForm"
			    scope="request"
			    validate="false"
			    parameter="delete">
			<exception key="errors.benutzer.delete"
				type="de.kipf.shop.personen.ui.DeleteBenutzerException"
				path="/admin/errorpage.jsp"/>
	    </action>

		<action path="/CreateBenutzer"
			    type="de.kipf.shop.personen.ui.BenutzerverwaltungAction"
			    name="createBenutzerForm"
			    scope="request"
				validate="true"
				input="/benutzerverwaltung/create.jsp"
				parameter="create">
				<exception key="errors.benutzer.create"
						   type="de.kipf.shop.personen.ui.CreateBenutzerException"
						   path="/admin/errorpage.jsp"/>
		</action>
		
	</action-mappings>
</struts-config>